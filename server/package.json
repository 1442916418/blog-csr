{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "blog-csr server",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --watch src -e ts --exec ts-node src/server.ts",
    "build:dev": "npm run log:dev && npm run c-build",
    "build:prod": "npm run log:prod && npm run c-build",
    "c-build": "cross-env NODE_ENV=production node ./build/start && tsc && node ./build/end",
    "obfuscator": "npm run build && node ./build/encryption",
    "tsc": "tsc",
    "prettier:src": "npx prettier --write ./src",
    "unit:test": "jest  --collectCoverage --testPathPattern=tests/unit/controllers/user.spec.ts --no-cache",
    "unit:test:watch": "jest --watchAll --testPathPattern=tests/unit/controllers/user.spec.ts --no-cache"
  },
  "keywords": [
    "koa",
    "tutorial"
  ],
  "author": "yss",
  "dependencies": {
    "@koa/cors": "^3.3.0",
    "@koa/router": "^8.0.8",
    "dayjs": "^1.11.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "log4js": "^6.4.6",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.6",
    "awilix": "~7.0.0",
    "awilix-koa": "~8.0.0",
    "awilix-router-core": "~1.6.1",
    "http-status-codes": "~2.2.0",
    "joi": "~17.6.3",
    "jsonwebtoken": "~8.5.1",
    "koa-helmet": "~6.1.0",
    "mysql2": "~2.3.3",
    "dotenv": "~16.0.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/koa": "2.13.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^8.0.2",
    "cross-env": "^7.0.3",
    "fs-extra": "^10.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.4.1",
    "ts-node": "~10.7.0",
    "typescript": "~4.5.5",
    "@types/node": "~17.0.33",
    "@types/jsonwebtoken": "~8.5.9",
    "supertest": "~6.3.0",
    "@types/supertest": "~2.0.12",
    "random-int": "~3.0.0",
    "sinon": "~14.0.1",
    "@types/sinon": "~10.0.13",
    "jest": "~29.2.1",
    "@types/jest": "~29.2.0",
    "ts-jest": "~29.0.3",
    "@types/mocha": "~10.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./src/**": "prettier --write --ignore-unknown"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/model/entity/*.ts"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "eslintIgnore": [
    "node_modules",
    "build",
    "coverage",
    "scripts"
  ]
}
